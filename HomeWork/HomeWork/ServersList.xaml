<Window x:Class="HomeWork.ServersListPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ServersList" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="253*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="serversGrid" Grid.Row="3" Grid.Column="0" Background="Transparent"/>
        <Button Grid.Column="2" Click="Logout" Grid.Row="1" Background="Transparent"/>
        <Grid.Background>
            <ImageBrush ImageSource="Source/server-list.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
