<Window x:Class="WindowsParty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:views="clr-namespace:WindowsParty.Views"
        xmlns:viewModels="clr-namespace:WindowsParty.ViewModels"
        mc:Ignorable="d"
        Title="WindowsParty" Width="1460" Height="780"
        >
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ServerViewModel}">
            <views:ServerView />
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}"/>
</Window>
