<Border
    x:Class="WindowsParty.Views.ServerItemView"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:models="clr-namespace:WindowsParty.ApiServices.Models;assembly=WindowsParty.ApiServices"

    BorderThickness="0,0,0,1" 
    BorderBrush="#FFE6E6E6"
    Padding="51,21,51,17" 

    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance models:Server}"
    d:DesignHeight="450" 
    d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="{Binding Name, Mode=OneWay}" 
                   Style="{StaticResource TextBlock.Server.Name}" />
        <TextBlock Grid.Column="1" 
                   Text="{Binding Distance, Mode=OneWay, StringFormat='{}{0} km'}" 
                   Style="{StaticResource TextBlock.Server.Distance}"/>
    </Grid>
</Border>
